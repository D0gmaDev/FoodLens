<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fr.foodlens.ActivityIntent">

    <Button
        android:id="@+id/btn_scan_barcode"
        android:layout_width="181dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="380dp"
        android:layout_marginStart="79dp"
        android:layout_marginTop="52dp"
        android:text="fill from barcode"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:enabled="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scannedTextResult" />

    <TextView
        android:id="@+id/scannedTextResult"
        android:layout_width="483dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="79dp"
        android:layout_marginTop="105dp"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:ems="10"
        android:hint="scan to fill"
        android:inputType="text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>